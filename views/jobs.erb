<section class="job_list nunito-font">
  <h1>Jobs For you</h1>
  <div class="filter_sort">
    <ul class="filters">
      <li><input type="text" placeholder="Find that job!" /></li>
      <li class="dropdown">
        <p>Country</p>
        <div class="sub_menu">
          <ul>
            <li><p>Peru</p></li>
            <li><p>Colombia</p></li>
            <li><p>Arequipa</p></li>
          </ul>
        </div>
      </li>
      <li class="dropdown">
        <p>Type</p>
        <div class="sub_menu">
          <ul>
            <li><p>Full-Time</p></li>
            <li><p>Part-Time</p></li>
            <li><p>Contract</p></li>
            <li><p>For Fre</p></li>
          </ul>
        </div>
      </li>
      <li class="dropdown">
        <p>Salary Range</p>
        <div class="sub_menu">
          <ul>
            <li><p>$0 - $1000</p></li>
            <li><p>$1001 - $2000</p></li>
            <li><p>$2001 - $3000</p></li>
            <li><p>$3001 or more</p></li>
          </ul>
        </div>
      </li>
      <li class="dropdown">
        <p>Experience</p>
        <div class="sub_menu">
          <ul>
            <li><p>No Experience</p></li>
            <li><p>Junior</p></li>
            <li><p>Semi Senior</p></li>
            <li><p>Senior</p></li>
            <li><p>Codeable Graduate</p></li>
          </ul>
        </div>
      </li>
    </ul>
    <div class="sort dropdown">
      <p>Recommended</p>
      <div class="sub_menu">
        <ul>
          <li><p>Newest</p></li>
          <li><p>Highest Salary</p></li>
          <li><p>Lowest Salary</p></li>
        </ul>
      </div>
    </div>
  </div>
  <ul class="announces">
    <% (1..8).each do |item| %>
    <li>
      <div class="left">
        <img src="assets/A_logo.png" alt="A logo" />
        <div class="position">
          <p class="caption">Software Engineer</p>
          <p class="new">new</p>
        </div>
        <div class="location">
          <p>Able - Lima</p>
          <img src="assets/peru_flag.png" alt="peru flag" />
        </div>
      </div>
      <div class="right">
        <img src="assets/dolar.svg" alt="dolar" />
        <p class="technology">ReactJS</p>
        <p class="technology">ReactJS</p>
        <p class="date_publish">Today</p>
      </div>
    </li>
    <% end %>
  </ul>
  <a href="#">Load more</a>
</section>
